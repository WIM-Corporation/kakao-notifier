{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@api": ["apps/api/src"],
      "@api/modules": ["apps/api/src/modules"],
      "@api/modules/*": ["apps/api/src/modules/*"],
      "@batch": ["apps/batch/src"],
      "@batch/modules": ["apps/batch/src/modules"],
      "@batch/modules/*": ["apps/batch/src/modules/*"],
      "@processor": ["apps/processor/src"],
      "@processor/modules": ["apps/processor/src/modules"],
      "@processor/modules/*": ["apps/processor/src/modules/*"],
      "@libs/config": ["libs/config/src"],
      "@libs/config/*": ["libs/config/src/*"],
      "@libs/type": ["libs/type/src"],
      "@libs/type/*": ["libs/type/src/*"],
      "@libs/base": ["libs/base/src"],
      "@libs/base/*": ["libs/base/src/*"],
      "@libs/decorator": ["libs/decorator/src"],
      "@libs/decorator/*": ["libs/decorator/src/*"],
      "@libs/exception": ["libs/exception/src"],
      "@libs/exception/*": ["libs/exception/src/*"],
      "@libs/filter": ["libs/filter/src"],
      "@libs/filter/*": ["libs/filter/src/*"],
      "@libs/guard": ["libs/guard/src"],
      "@libs/guard/*": ["libs/guard/src/*"],
      "@libs/interceptor": ["libs/interceptor/src"],
      "@libs/interceptor/*": ["libs/interceptor/src/*"],
      "@libs/meta": ["libs/meta/src"],
      "@libs/meta/*": ["libs/meta/src/*"],
      "@libs/middleware": ["libs/middleware/src"],
      "@libs/middleware/*": ["libs/middleware/src/*"],
      "@libs/pool-manager": ["libs/pool-manager/src"],
      "@libs/pool-manager/*": ["libs/pool-manager/src/*"],
      "@libs/transformer": ["libs/transformer/src"],
      "@libs/transformer/*": ["libs/transformer/src/*"],
      "@libs/util": ["libs/util/src"],
      "@libs/util/*": ["libs/util/src/*"],
      "@libs/modules": ["libs/modules/src"],
      "@libs/modules/*": ["libs/modules/src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "incremental": true,
    "declaration": true,
    "newLine": "lf",
    "strict": true,
    "strictFunctionTypes": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": false,
    "noPropertyAccessFromIndexSignature": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["typings/global.ts", "apps/**/src/**/*.ts", "apps/**/test/**/*.ts", "libs/**/src/**/*.ts", "libs/test-util/src/global-set-up.ts"],
  "exclude": ["node_modules", "dist", "node_modules", "not-yet-used-entities/**", "**.spec.ts"]
}
